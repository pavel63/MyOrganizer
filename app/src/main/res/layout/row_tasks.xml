<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <View
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/row_tasks_indicator_v"
        android:layout_width="20dp"
        android:layout_height="80dp"
        tools:background="@android:color/holo_red_dark" />

    <TextView
        tools:text="Название"
        android:id="@+id/row_tasks_name_tv"
        app:layout_constraintLeft_toRightOf="@+id/row_tasks_indicator_v"
        style="@style/tvWrapWrapBlack"
        android:gravity="center|bottom" />

    <TextView
        android:id="@+id/row_tasks_rest_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/row_tasks_percent_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>