<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/item_frame"
    android:layout_marginTop="2dp"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:elevation="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <View
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/row_tasks_indicator_v"
        android:layout_width="8dp"
        android:layout_height="80dp"
        tools:background="@android:color/holo_red_dark" />

    <TextView
        android:layout_alignParentBottom="true"
        tools:text="Название"
        android:layout_marginLeft="16dp"
        android:id="@+id/row_tasks_name_tv"
        android:layout_toRightOf="@+id/row_tasks_indicator_v"
        style="@style/tvWrapWrapBlack"/>

    <TextView
        android:padding="4dp"
        android:background="@drawable/percent_badge_bg"
        tools:text="70"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/row_tasks_percent_tv"
        android:id="@+id/row_tasks_rest_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="%"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="8dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:id="@+id/row_tasks_percent_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>